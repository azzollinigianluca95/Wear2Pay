<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"

        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/french_fries"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/patatine_mensola"
            android:layout_weight="1.0"
            android:scaleX="0.8"
            android:scaleY="0.6"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/chocolate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cioccolata_mensola"
            android:scaleX="0.8"
            android:scaleY="0.6"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-10dp"
            android:layout_weight="1.0"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >


        <ImageButton
            android:id="@+id/bottle_water"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/acqua_mensola"
            android:layout_weight="1.0"
            android:scaleX="0.8"
            android:scaleY="0.6"
            android:gravity="center"/>


        <ImageButton
            android:id="@+id/coke"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/coca_mensola"
            android:layout_weight="1.0"
            android:scaleX="0.8"
            android:scaleY="0.7"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>